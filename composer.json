{
    "name": "kanalumaddela/steam-login",
    "description": "Steam Auth PHP library",
    "keywords": ["steam", "auth"],
    "license": "MIT",
    "authors": [
        {
            "name": "kanalumaddela",
            "email": "github@maddela.org",
            "homepage": "https://www.maddela.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "kanalumaddela\\SteamLogin\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "pestphp/pest": "^4.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "suggest": {
        "kanalumaddela/laravel-steam-login": "Steam Auth for Laravel applications",
        "xpaw/steamid": "SteamID library to handle proper steamid validation"
    }
}
